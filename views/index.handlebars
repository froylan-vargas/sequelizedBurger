<div class="mb-3 jumbotron text-center jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Welcome to Froy's Bistro</h1>
  </div>
</div>

<div id="addCustomer" class="mb-3 p-3 text-center">
    <h3>Customers</h3>
    <h4>Add a new customer</h4>
    <div class="row">
        <div class="col-md-10 col-12">
            <span>Customer Name: </span>
            <input id="customerName">
        </div>
        <div class="col-md-2 mt-md-0 mt-3 col-12">
            <button id="addCustomerBtn" class="btn btn-primary">Add!</button>
        </div>
    </div>
</div>

<div id="customers">
    <div class="row">
        <div class="col-12">
            {{#each customers}}
                <div class="row customerContainer text-center" style="margin-bottom:15px!important">
                    <div class="col-6">
                        <span>{{name}}</span>
                    </div>
                    <div class="col-4">
                        <button data-id="{{id}}" class="hamburgersButton btn btn-warning">View hamburgers</button>
                    </div>
                    <div class="col-2">
                        <button data-id="{{id}}" class="deleteHamburgerBtn btn btn-danger">X</button>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>